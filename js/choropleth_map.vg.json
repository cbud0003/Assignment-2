{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Olympics Medals (1896-2014)",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/cbud0003/FIT3179/main/js/worldmap.geo.json",
    "format": {
      "type": "topojson", "feature": "world.geo"
    }
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/cbud0003/FIT3179/main/data/Medal.csv",
          
        "format": {
        "type": "csv",
        "parse": {
          "Medal": "number"
        }
      } 
          },
        "key": "Country",
        "fields": ["Medal"]
      }
    },
    {"calculate": "datum.Medal + 10", "as": "Medal Count"}
  ],
  "projection": {"type": "equirectangular"},
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Medal Count",
      "type": "quantitative",
      "scale": {"type": "linear",
      "domain": [625,1250, 2500, 5000],
      "range": ["#EE2e31","#F4C095","#679289","#071E22"]},
      "title": "Medals"
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "Country"},
      {"field": "Medal", "type": "quantitative", "title": "Medals"}
    ]
  }
}