{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 900,
    "height": 400,
    "projection": {
        "type": "equirectangular",
        "scale": { "expr": "zoom_level" },
         "center": {"expr": "center_to"}
    },
    "params": [
        {
            "name": "zoom_level",
            "value": 140,
            "bind": {
                "input": "range",
                "min": 140,
                "max": 1000,
                "step": 100,
                "name": "Zoom: "
                }
        },
        {
          "name": "center_to",
          "value": [0, 20],
          "bind": {
             "input": "select",
              "options": [
                [0, 20],
                [133.7, -25.2],
                [34.5, -8.7],
                [130.0, 30.6],
                [15.2, 54.5],
                [-105.2, 54.5],
                [-55.4, -8.7] ],
 "labels": ["World", "Australia", "Africa", "Asia", "Europe", "North America", "South America"],
"name": "Map Centre: "
 }
 }
 ],
    "layer": [{
            "data": {
                "url": "https://raw.githubusercontent.com/cbud0003/FIT3179/main/js/worldmap.geo.json",
                "format": { "type": "topojson", "feature": "world.geo" }
            },
            "transform": [{
                "calculate": "'Data is not available in ' + datum.properties.name",
                "as": "note"
            }],
            "mark": {
                "type": "geoshape",
                "fill": "#ddd",
                "stroke": "white",
                "strokeWidth": 1
            },
            "encoding": { "tooltip": { "field": "note" } }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/cbud0003/FIT3179/main/data/Medals.csv"
            },
            "transform": [{
                    "lookup": "Country",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/cbud0003/FIT3179/main/js/worldmap.geo.json",
                            "format": {
                                "type": "topojson",
                                "feature": "world.geo"
                            }
                        },
                        "key": "properties.name"
                    },
                    "as": "geo"
                }
            ],
            "mark": { "type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5 },
            "encoding": {
                "shape": { "field": "geo", "type": "geojson" },
                "color": {
                    "field": "Medal",
                    "type": "quantitative",
                    "scale": {
                        "scheme": "blues"
                    }
                },
                "tooltip": [
                    { "field": "Country", "type": "nominal", "title": "Country" },
                    {
                        "field": "Medal",
                        "type": "quantitative",
                        "title": "Medal Count",
                        "format": ","
                    }
                ]
            }
        }
    ],
    "config": {}
}
