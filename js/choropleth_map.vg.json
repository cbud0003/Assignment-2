{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Olympics Medals (1896-2014)",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/cbud0003/FIT3179/main/js/worldmap.geo.json",
    "format": {"type": "topojson", "feature": "world.geo"}
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/cbud0003/FIT3179/main/data/Medal.csv"
        },
        "key": "Country",
        "fields": ["Count"]
      }
    }
  ],
  "projection": {"type": "equirectangular"},
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Count",
      "type": "quantitative",
      "scale": {"type": "linear",
      "domain": [100,500,1000,4500],
      "range": ["#DDBBCE","#902923","#701426","#4C0928"]},
      "title": "Medals"
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "Country"},
      {"field": "Count", "type": "quantitative", "title": "Medals"}
    ]
  }
}
